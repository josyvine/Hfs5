<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- 1. BIOMETRIC & FACE HARDWARE PERMISSIONS (Zero-Fail Step 1) -->
    <uses-permission android:name="android.permission.USE_BIOMETRIC" />
    <uses-permission android:name="android.permission.USE_FACE" />

    <!-- 2. INTRUDER CAPTURE & CAMERA PERMISSIONS -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.front" />

    <!-- 3. GPS LOCATION PERMISSIONS (For Map Link Alerts) -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <!-- 4. DIALER STEALTH MODE PERMISSIONS (For Oppo Call Interception) -->
    <uses-permission android:name="android.permission.PROCESS_OUTGOING_CALLS" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <!-- 5. APP MONITORING & OVERLAY PERMISSIONS -->
    <uses-permission android:name="android.permission.PACKAGE_USAGE_STATS" tools:ignore="ProtectedPermissions" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <!-- 6. SMS & MMS ALERT PERMISSIONS -->
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- 7. SYSTEM PERSISTENCE PERMISSIONS -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" android:maxSdkVersion="32" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" android:maxSdkVersion="32" />

    <application
        android:name=".HFSApplication"
        android:allowBackup="true"
        android:icon="@drawable/hfs"
        android:label="@string/app_name"
        android:roundIcon="@drawable/hfs"
        android:supportsRtl="true"
        android:theme="@style/Theme.HFS"
        tools:targetApi="31">

        <!-- A. SPLASH SCREEN (Main Launcher) -->
        <activity
            android:name=".ui.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.HFS.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- B. MAIN DASHBOARD (Navigation Host) -->
        <activity
            android:name=".ui.MainActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize"/>

        <!-- C. FACE SETUP ACTIVITY (Landmark Calibration) -->
        <activity
            android:name=".ui.FaceSetupActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.HFS.NoActionBar" />

        <!-- D. STEALTH UNLOCK POPUP (Hide/Unhide Toggle) -->
        <activity
            android:name=".ui.StealthUnlockActivity"
            android:excludeFromRecents="true"
            android:exported="false"
            android:launchMode="singleInstance"
            android:theme="@style/Theme.HFS.Dialog" />

        <!-- E. LOCK SCREEN OVERLAY (App Blocker) -->
        <activity
            android:name=".ui.LockScreenActivity"
            android:excludeFromRecents="true"
            android:launchMode="singleInstance"
            android:noHistory="true"
            android:theme="@style/Theme.HFS.LockOverlay"
            android:windowSoftInputMode="stateAlwaysHidden" />

        <!-- F. MONITORING SERVICE (Background Guard) -->
        <service
            android:name=".services.AppMonitorService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="location|camera|dataSync" />

        <!-- G. DEVICE ADMIN RECEIVER (Lost Phone Trigger) -->
        <receiver
            android:name=".receivers.AdminReceiver"
            android:description="@string/admin_description"
            android:label="@string/app_name"
            android:permission="android.permission.BIND_DEVICE_ADMIN"
            android:exported="true">
            <meta-data
                android:name="android.app.device_admin"
                android:resource="@xml/device_admin" />
            <intent-filter>
                <action android:name="android.app.action.DEVICE_ADMIN_ENABLED" />
                <action android:name="android.app.action.DEVICE_ADMIN_DISABLED" />
            </intent-filter>
        </receiver>

        <!-- H. SMS COMMAND RECEIVER (Remote Lock/Unlock) -->
        <receiver
            android:name=".receivers.SmsCommandReceiver"
            android:enabled="true"
            android:exported="true"
            android:permission="android.permission.BROADCAST_SMS">
            <intent-filter>
                <action android:name="android.provider.Telephony.SMS_RECEIVED" />
            </intent-filter>
        </receiver>

        <!-- I. BOOT RECEIVER (Auto-Start after Reboot) -->
        <receiver
            android:name=".receivers.BootReceiver"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.QUICKBOOT_POWERON" />
            </intent-filter>
        </receiver>

        <!-- J. STEALTH DIALER (Call Interception) -->
        <!-- Set to max priority to ensure Oppo Dialpad detection -->
        <receiver
            android:name=".receivers.StealthLaunchReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter android:priority="2147483647">
                <action android:name="android.intent.action.NEW_OUTGOING_CALL" />
            </intent-filter>
        </receiver>

        <!-- K. FILE PROVIDER (Internal Path Sharing) -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

    </application>

</manifest>