<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- State when the menu item is currently selected by the user -->
    <item 
        android:color="@color/hfs_primary_blue" 
        android:state_checked="true" />
    
    <!-- Default state for unselected menu items -->
    <item 
        android:color="@color/nav_unselected" 
        android:state_checked="false" />
    
    <!-- Fallback default color -->
    <item 
        android:color="@color/nav_unselected" />
</selector>