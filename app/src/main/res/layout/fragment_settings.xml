<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hfs_background_dark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- SECTION 1: CORE CREDENTIALS -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="Core Security Setup"
            android:textColor="@color/hfs_primary_blue"
            android:textSize="14sp"
            android:textStyle="bold" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardBackgroundColor="@color/hfs_surface_dark"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Trusted Phone Number -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/layoutTrustedNumber"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Trusted Phone Number"
                    android:textColorHint="@android:color/darker_gray"
                    app:boxStrokeColor="@color/hfs_primary_blue"
                    app:startIconDrawable="@android:drawable/ic_menu_call"
                    app:startIconTint="@android:color/darker_gray">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etTrustedNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="phone"
                        android:textColor="@android:color/white" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Secret SMS PIN -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/layoutSecretPin"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:hint="Secret SMS PIN (e.g. 7392)"
                    android:textColorHint="@android:color/darker_gray"
                    app:boxStrokeColor="@color/hfs_primary_blue"
                    app:startIconDrawable="@android:drawable/ic_lock_idle_lock"
                    app:startIconTint="@android:color/darker_gray">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etSecretPin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:maxLength="4"
                        android:textColor="@android:color/white" />
                </com.google.android.material.textfield.TextInputLayout>

                <Button
                    android:id="@+id/btnSaveSettings"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="@color/hfs_primary_blue"
                    android:text="SAVE SECURITY DATA"
                    android:textColor="@android:color/white"
                    app:cornerRadius="8dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- NEW SECTION: CLOUD STORAGE -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="Cloud Storage Sync"
            android:textColor="@color/hfs_primary_blue"
            android:textSize="14sp"
            android:textStyle="bold" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardBackgroundColor="@color/hfs_surface_dark"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switchCloudSync"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Automatic Drive Upload"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    app:thumbTint="@color/hfs_primary_blue" />

                <TextView
                    android:id="@+id/tvDriveAccountStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Status: Disconnected"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/btnConnectDrive"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="16dp"
                    android:text="Connect Google Drive"
                    android:textColor="@color/hfs_primary_blue"
                    app:strokeColor="@color/hfs_primary_blue" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- NEW SECTION: ANTI-THEFT HARDWARE PROTECTION (Fixes the Build Error) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="Anti-Theft Hardware Protection"
            android:textColor="@color/hfs_primary_blue"
            android:textSize="14sp"
            android:textStyle="bold" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardBackgroundColor="@color/hfs_surface_dark"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switchAntiTheft"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Enable Hardware Watchdogs"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    app:thumbTint="@color/hfs_primary_blue" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="Triggers Siren on SIM removal or Airplane Mode."
                    android:textColor="@android:color/darker_gray"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Emergency Number (Encrypted Vault)"
                    android:textColor="@color/hfs_primary_blue"
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <EditText
                        android:id="@+id/etEmergencyNumber"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:enabled="false"
                        android:hint="Tap UNLOCK to view"
                        android:inputType="phone"
                        android:textColor="@android:color/white"
                        android:textColorHint="@android:color/darker_gray" />

                    <Button
                        android:id="@+id/btnEditEmergency"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="UNLOCK"
                        android:textColor="@color/hfs_primary_blue" />
                </LinearLayout>

                <Button
                    android:id="@+id/btnSaveEmergency"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="8dp"
                    android:backgroundTint="#D32F2F"
                    android:text="ENCRYPT &amp; SAVE TO VAULT"
                    android:textColor="@android:color/white"
                    android:visibility="gone"
                    app:cornerRadius="8dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:background="@android:color/darker_gray" />

                <Button
                    android:id="@+id/btnUpdateSims"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="UPDATE TRUSTED SIM CARDS"
                    android:textColor="@color/hfs_primary_blue"
                    app:strokeColor="@color/hfs_primary_blue" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:text="Registers currently inserted SIMs as 'Owner SIMs'."
                    android:textColor="@android:color/darker_gray"
                    android:textSize="11sp" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- SECTION 2: PROTECTION MODES -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="Advanced Protection"
            android:textColor="@color/hfs_primary_blue"
            android:textSize="14sp"
            android:textStyle="bold" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardBackgroundColor="@color/hfs_surface_dark"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <!-- Anti-Uninstall Switch -->
                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switchAntiUninstall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:text="Anti-Uninstall Protection"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    app:thumbTint="@color/hfs_primary_blue" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:background="@android:color/darker_gray" />

                <!-- Stealth Mode Switch -->
                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switchStealthMode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:text="Stealth Mode (Hide Icon)"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    app:thumbTint="@color/hfs_primary_blue" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:background="@android:color/darker_gray" />

                <!-- Fake Gallery Switch -->
                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switchFakeGallery"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:text="Fake Gallery (Decoy System)"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    app:thumbTint="@color/hfs_primary_blue" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- SECTION 3: OWNER IDENTITY -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="Owner Identity"
            android:textColor="@color/hfs_primary_blue"
            android:textSize="14sp"
            android:textStyle="bold" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            app:cardBackgroundColor="@color/hfs_surface_dark"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@android:drawable/ic_menu_camera"
                    app:tint="@color/hfs_primary_blue" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Biometric Data"
                        android:textColor="@android:color/white"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Status: Identity Calibrated"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="12sp" />
                </LinearLayout>

                <Button
                    android:id="@+id/btnRescanFace"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RE-SCAN"
                    android:textColor="@color/hfs_primary_blue" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>